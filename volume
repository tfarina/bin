#!/bin/bash

STEP=5
BIGSTEP=25

case "$1" in
    up)
	pactl set-sink-volume 0 +$STEP%
        ;;
    down)
	pactl set-sink-volume 0 -$STEP%
	;;
    toggle)
	pactl set-sink-mute 0 toggle
        ;;
    mute)
	pactl set-sink-mute 0 1
        ;;
    bigup)
	pactl set-sink-volume 0 +$BIGSTEP%
        ;;
    bigdown)
	pactl set-sink-volume 0 -$BIGSTEP%
        ;;
    *)
	echo "Usage: $0 {up|down|toggle|mute|bigup|bigdown}"
	exit 2
esac
